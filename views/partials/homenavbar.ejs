<style>
  #container{
    position: fixed;
    background-color: #676E80;
    width: 100%;
    z-index: 3;
    margin-top: -90px;
  } 
  .logo{
    width: 250px;
    box-shadow: none;
    margin-left: 10px;
    margin-top: -5px;
    margin-right: 60px;
  }
  li a{
    font-size: 16px;
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    padding: 12px;
    border-radius: 12px;
    margin-left: 30px;
    margin-top: 15px;
  }
  li a:hover{
    color: #fff;
    background-color: #BE8836;
  }
  /* responsividade */
  @media screen and (min-width: 320px){
    li a {
      font-size: 9px;
      margin-left: 30px;
      margin-top: -5px;
    }
    .logo{
      width: 200px;
    }
  }
  @media screen and (min-width: 360px){
    .logo{
      width: 200px;
    }
    li a{
      font-size: 11px;
      margin-left: 30px;
      margin-top: -5px;
    }
  }
  @media screen and (min-width: 768px){
    li a{
      font-size: 11px;
      margin: -5px;
    }
  }
  @media screen and (max-width: 1218px){
    .logo{
      width: 250px !important;
    }
    li a{
      font-size: 16px !important;
      margin-top: 10px;
      margin-left: 5px;
      margin-right: 5px;
    }
  }
  @media screen and (max-width: 1024px){
    li a{
      font-size: 13px;
      margin: 5px;
    }
  }
  @media screen and (min-width: 540px){
    .logo{
      margin-left: 90px;
    }
    li a{
      margin-left: 70px;
      font-size: 10px;
    }
  }
  @media screen and (min-width: 280px){
    .logo{
      margin-left: 0px;
      width: 120px;
    }
    li a{
      margin-left: 0px;
      font-size: 10px;
    }
  }
  @media screen and (max-width: 720px){
    .logo{
      width: 150px;
    }
  }
</style>
<nav  class="navbar" id="container">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link logo" href="/">
        <img src="../../img/logonaz.png" alt="logo" class="logo"/>
      </a>
    </li>
    <% categories.forEach(category => { %>
      <li>
        <a href="/category/<%= category.slug %>">
          <%= category.title %>
        </a>
      </li>
    <% }) %>
  </ul>
</nav>