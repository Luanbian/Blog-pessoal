<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Todos os usuarios</h2>
    <a href="/admin/users/create" class="btn btn-success"> Cadastrar novo usuario </a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <th> <%= user.id %> </th>
                    <th> <%= user.email %> </th>
                    <th>
                        <a href="/admin/users/edit/<%= user.id %>" class="btn btn-warning"> Editar </a>
                        <form method="POST" action="/users/delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value="<%= user.id %>">
                            <button class="btn btn-danger"> Deletar </button>
                        </form>
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../../partials/footer.ejs') %>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Voce quer deletar este cadastro?")
        if(decision){
            form.submit();
        }else{}
    }
</script>